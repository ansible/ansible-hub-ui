{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "paths": {
      "src/*": ["src/*"]
    },
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es5"
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
